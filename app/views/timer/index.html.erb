<div id="script_area">
  <% content_for(:head) do %>
    <%= javascript_include_tag "timer" %>
  <% end %>
</div>

<%#= image_tag("logo.png", :alt => "Timebank Piggy", :class => "round") %>
<%= form_tag({:action => :index},:method => "get",:id =>'form_timer', :remote=>true) do %>
  <div data-role="navbar">
    <ul>
      <li><a href="pause.html" data-rel="dialog" data-transition="flip">Pause</a></li>
      <li><a href="a.html" data-rel="dialog" data-transition="flip">Change game settings</a></li>
      <li><a href="b.html">End Game</a></li>
    </ul>
  </div><!-- /navbar -->


  <div id="player_area_top">
    <%= render 'players_top' %>
  </div>

  <div id="timer_area" class="ui-bar-e">
    <%= hidden_field_tag 'game_id', @game.id %>
    <%= hidden_field_tag 'round_number', @game.round_number %>
    <h3 class="player-area"><%= @game.name %> (Round #<%= @game.round_number %>)</h3>
    <h1 style="font-size:200%;color:blue" class="player-area" ><span id="message">Round is about to start...</span></h1>
    <h3  class="player-area">3:38 (timebank: 10:23)</h3>
    <h5  class="player-area">press to continue</h5>
  </div>
  <div id="player_area_top">
    <%= render 'players_top' %>
  </div>


  <h2>Actions</h2>
  <table>
    <tr>
      <td><%= button_to_function "Start round", "startRound()", {:id => "start_round_button"} %></td>
      <td><%= button_to_function "Next", "nextPlayer()", {:style => "visibility:hidden", :id => "next_button",:disable_with => "Please wait..."} %></td>
      <td><%= button_to_function "Pause", "pauseGame()", {:style => "visibility:hidden", :id => "pause_button"} %></td>
      <td><%= button_to_function "Resume", "resumeGame()", {:style => "visibility:hidden", :id => "resume_button"} %></td>
    </tr>
  </table>
  <table>
    <tr>
      <td><%= button_to_function "End game", "endGame()" %></td>
    </tr>
  </table>

  <%#*<div id="player_area_bottom">%>
  <%#= render 'players_bottom' %>
  <%#*</div>%>

<% end %>






