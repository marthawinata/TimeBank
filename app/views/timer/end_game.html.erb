<p id="notice"><%= notice %></p>

<h1><%= @game.name %> - Game Summary</h1>

<fieldset class="ui-grid-a">
  <div class="ui-block-a">
    <p>
      <b>Started on </b>
      <%= @game.created_at.strftime("%b %d, %Y at %H:%M:%S") %>
    </p>
    <p>
      <b>Game time:</b>
      <%= @game.game_time.strftime("%H:%M:%S") %>
    </p>
    <p>
      <b># of players:</b>
      <%= @game.number_of_players %>
    </p>
    <p>
      <b># of rounds played: </b>
      <%= @game.round_number %>
    </p>
  </div>
  <div class="ui-block-b">
    <p>
      <b>Time per turn:</b>
      <%= @game.time_per_turn.strftime("%H:%M:%S") %>
    </p>

    <p>
      <b>Timebank per player:</b>
      <%= @game.timebank_per_player.strftime("%H:%M:%S") %>
    </p>


    <p>
      <b>Interlude per turn:</b>
      <%= @game.interlude_per_turn.strftime("%H:%M:%S") %>
    </p>
  </div>
</fieldset>

<h3>Players Summary</h3>

<% @game_sessions.each do |game_session| %>

  <div data-role="collapsible">
    <h3><%= game_session.player.name  %> </h3>
    <p>
      <b>Time in the game:</b>
      <%= game_session.time_taken_so_far.strftime("%H:%M:%S") %>
    </p>
    <p>
      <b>Timebank at game end:</b>
      <%= game_session.time_bank.strftime("%H:%M:%S") %>
    </p>
  </div>
<% end %>

<a href=<%="/timer?game_id=" + @game.id.to_s%> data-role="button" >No, wait... Let's go back, we haven't finished the game</a>
<a href="/" data-role="button" data-theme="e">Start a new game</a>
