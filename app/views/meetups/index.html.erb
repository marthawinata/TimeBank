<h1>Listing meetups</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Host user</th>
    <th>Meetup type</th>
    <th>Invitation type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @meetups.each do |meetup| %>
  <tr>
    <td><%= meetup.name %></td>
    <td><%= meetup.host_user.email unless meetup.host_user.nil? %></td>
    <td><%= meetup.meetup_type_description %></td>
    <td><%= meetup.invitation_type_description %></td>
    <td><%= link_to 'Show', meetup %></td>
    <td><%= link_to 'Edit', edit_meetup_path(meetup) %></td>
    <td><%= link_to 'Destroy', meetup, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Meetup', new_meetup_path %>
