  </div>

  <div class="field">
    <%= f.label :invitation_type_id %><br />
    <%= f.select :invitation_type_id, options_for_select(Meetup::INVITATION_TYPE_DESCRIPTIONS.invert(), @meetup.invitation_type_id) %>

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
