<h1>Entering player details</h1>

<%= form_tag({:action => :create_game_sessions},:method => "post") do %>
  <% @number_of_players.times do |i| %>
    <div class="field">
      <%= label_tag "Player \##{i+1} name " %><br />
      <%= text_field_tag "players[#{i}][name]", "Player#{i+1}"%>
    </div>
  <% end %>

  <%= hidden_field_tag 'game_id', @game.id %>
  <%= hidden_field_tag 'number_of_players', @number_of_players %>


  <div class="actions">
    <%= submit_tag "Start game!" %>
  </div>






<% end %>
